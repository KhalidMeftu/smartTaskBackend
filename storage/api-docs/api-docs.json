        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Notifications",
            "description": "Notifications"
        },
        {
            "name": "Tasks",
            "description": "Tasks"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}